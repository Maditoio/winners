// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  wallet        Wallet?
  accounts      Account[]
  sessions      Session[]
  referralCode  String    @unique @default(cuid())
  referredBy    String?
  referrer      User?     @relation("Referrals", fields: [referredBy], references: [id])
  referrals     User[]    @relation("Referrals")
  
  entries       Entry[]
  transactions  Transaction[]
  withdrawalRequests WithdrawalRequest[]

  @@index([referredBy])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Wallet {
  id                String   @id @default(cuid())
  userId            String   @unique
  balance           Decimal  @default(0) @db.Decimal(18, 8)
  cryptoAddress     String   @unique
  withdrawalAddress String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id              String            @id @default(cuid())
  userId          String
  type            TransactionType
  amount          Decimal           @db.Decimal(18, 8)
  status          TransactionStatus @default(PENDING)
  txHash          String?           @unique
  fromAddress     String?
  toAddress       String?
  description     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  withdrawalRequests WithdrawalRequest[]
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model AppSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Draw {
  id              String     @id @default(cuid())
  title           String
  description     String?    @db.Text
  entryPrice      Decimal    @db.Decimal(18, 8)
  maxEntries      Int?
  currentEntries  Int        @default(0)
  status          DrawStatus @default(UPCOMING)
  startDate       DateTime
  endDate         DateTime
  drawDate        DateTime
  firstPrizeImage String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  entries         Entry[]
  winners         Winner[]
  prizes          Prize[]

  @@index([status])
  @@index([drawDate])
}

model Prize {
  id              String   @id @default(cuid())
  drawId          String
  position        Int
  name            String
  description     String?  @db.Text
  prizeAmount     Decimal? @db.Decimal(18, 8)
  imageUrl        String?
  createdAt       DateTime @default(now())

  draw            Draw     @relation(fields: [drawId], references: [id], onDelete: Cascade)

  @@index([drawId])
  @@unique([drawId, position])
}

model Entry {
  id              String   @id @default(cuid())
  userId          String
  drawId          String
  ticketNumber    String   @unique
  purchasedAt     DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  draw            Draw     @relation(fields: [drawId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([drawId])
  @@index([purchasedAt])
}

model Winner {
  id              String   @id @default(cuid())
  drawId          String
  userId          String
  position        Int
  prizeAmount     Decimal? @db.Decimal(18, 8)
  ticketNumber    String
  createdAt       DateTime @default(now())

  draw            Draw     @relation(fields: [drawId], references: [id], onDelete: Cascade)

  @@index([drawId])
  @@index([userId])
}
model WithdrawalRequest {
  id              String              @id @default(cuid())
  userId          String
  amount          Decimal             @db.Decimal(18, 8)
  fee             Decimal             @db.Decimal(18, 8)
  netAmount       Decimal             @db.Decimal(18, 8)
  cryptoAddress   String
  status          WithdrawalStatus    @default(PENDING)
  transactionId   String?             @unique
  requestedAt     DateTime            @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?
  adminNotes      String?             @db.Text
  
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  transaction     Transaction?        @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([requestedAt])
}


enum UserRole {
  USER
  ADMIN
}

enum WithdrawalStatus {
  PENDING
  UNDER_REVIEW
  COMPLETED
  REJECTED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  ENTRY_PURCHASE
  PRIZE_WIN
  REFERRAL_BONUS
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum DrawStatus {
  UPCOMING
  ACTIVE
  DRAWING
  COMPLETED
  CANCELLED
}
